<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jkdprojects.mathgame">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/unnamed"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rounded"
        android:supportsRtl="true"
        tools:targetApi="31">
        <activity
            android:name=".SplashScreenactivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.ResultPage" />
        <activity
            android:name=".Game_activity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".Game_activity2"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".Game_activity3"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MATHGAME">
        </activity>
    </application>

</manifest>